<view class="page">
    <view class="weui-cells weui-cells_after-title">
        <!-- content -->
        <view class="content flex-item">
          <block wx:for="{{prodList[curIndex]}}" catchtap="selectProd"> 
            <view class="prod flex-wrap flex-direction-row"  data-prod="{{item.id}}">
              <view class="flex-item">
                <text class="title">{{item.name}}</text>
              </view>
              <view class="add-btn">
                <icon type="{{item.status ? 'success' : 'circle'}}" color="#09f" size="30"></icon>
              </view>
            </view>
          </block>
    </view>
  </view>
</view>
