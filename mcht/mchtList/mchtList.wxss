@import "../style/mcht.wxss";

.weui-input {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
  height: 10px;
  width: 100%;
  left: 10px;
  top: 20rpx;
}

.weui-cell__bd {
  flex-direction: column;
  flex-wrap: wrap;
}

.mcht-search {
  width: 100%;
  height: 108px;
  background: #fff;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
  display: flex;
  justify-content: center;
}

.weui-cell_access {
  width: 100%;
}

#picFlag {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
}

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.weui-cell__hd #mchtName {
  font-size: 18px;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern";
  -moz-font-feature-settings: "kern";
  font-kerning: normal;
}

#mchtStat {
  font-size: 14px;
  color: #169bd5;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern" 1;
  font-kerning: normal;
}

#crtDateTime {
  font-size: 14px;
}

.search-btn {
  margin-right: 4%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.weui-btn {
  margin: 1.17647059em 15px 0.2em;
  width: 100%;
  height: 80%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pic-flag {
  text-align: left;
  width: 40px;
  flex: 1;
}

.search-input {
  width: 90%;
}

#search-btn {
  background-color: #09f;
  color: #000;
}
