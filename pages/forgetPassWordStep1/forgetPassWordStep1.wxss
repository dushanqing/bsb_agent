
@import "/style/weui.wxss";

.login-loading{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/

}

.login-loading-image{
    height: 64rpx;
    width: 64rpx;
}

.loginStep1-title-container {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.loginStep1-title-image {
  height: 100rpx;
  width: 500rpx;
}

.loginStep1-input {
  padding: 10px 15px;
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.loginStep1-userName {
  height: 48rpx;
  width: 48rpx;
}

.loginStep1-button{
  width: 250px;
  background-color:#0099FF;
 }

.loginStep1-input-padding{
  padding-left: 25px;
}


.loginStep2-title-container {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
 
}

.loginStep2-title-image {
  height: 100rpx;
  width: 500rpx;
}

.loginStep2-input {
  padding: 10px 15px;
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.loginStep2-userName {
  height: 48rpx;
  width: 60rpx;
}

.loginStep2-button{
  width: 500rpx;
  background-color:#0099FF;
 }

 .loginStep2-text-container{
   height: 200rpx
 }

.loginStep2-text-field {
  display: flex;
  color:#00000041;
  font-size:15px;
  justify-content: center;  
}

.loginStep2-input-padding{
  padding-left: 25rpx;
  width: 380rpx;
}

.loginStep2-vcode-btn {
  display: inline-block;
  padding: 0 0.6em 0 0.7em;
  border-left: 1px solid #e5e5e5;
  line-height: 2.58823529em;
  font-size: 17px;
  color: #3cc51f;
  white-space: nowrap;
}

.loginStep2-checkCode{
  width: 130px;
}

.loginStep2-sliders-container{
  height: 150rpx;
}


