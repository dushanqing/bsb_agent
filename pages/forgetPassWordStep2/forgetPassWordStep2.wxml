<!-- 包商title -->
<view class="forget-title-container">
  <image class="forget-title-image" src="/images/logo.png"></image>
</view>

<!-- 图形验证码 -->
<view class="forget-sliders-container">
  <sliders  bindmyevent="myEventListener"></sliders>
</view>

<form bindsubmit="onStep2">
<!-- 短信验证 -->
<view class="forget-input">
  <image class="forget-userName" src="/images/checkCode.png"></image>
  <input name="checkCode" type="number" class="forget-input-padding"  placeholder="请输入验证码" maxlength="6"></input>
  <view class="forget-vcode-btn">
    <button class="forget-checkCode" bindtap="getCheckCode" disabled="{{disabled}}" > {{text}}</button>
  </view>
</view>
<view class="weui-cell"/>

<!-- 发送短信提示 -->
<view class="forget-text-container">
  <text class="forget-text-field">将发送短信至{{telPhone}}手机,请注意查收</text>
</view>

<view>
  <button class="forget-button" form-type="submit">登录</button>
</view>
</form>

