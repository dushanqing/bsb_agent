@import "/pages/mcht/style/mcht.wxss";
@import "/pages/common/bsb/bsb.wxss";
.weui-panel {
  background-color: #fff;
  position: relative;
  overflow: hidden;
}

.title-text{
  text-align: left;
}

.mcht_panel {
  width: 100%;
  height: 100%;
}

.mcht {
  width: 100%;
  height: 400rpx;
}

.img-btn {
  top: 60rpx;
  background-color: #fff;
  width: 260rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-width: 1px;
  border-style: solid;
  border-color: rgba(121, 121, 121, 1);
}

.mcht-text {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

.u101 {
  top: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

#center {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.center-mchts {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 130px;
  height: 100px;
  background: inherit;
  box-sizing: border-box;
  border-width: 1px;
  border-style: solid;
  border-color: rgba(121, 121, 121, 1);
  border-radius: 9px;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  font-family: 'PingFang SC Regular', 'PingFang SC';
  font-weight: 400;
  font-style: normal;
}

.center-mchts-image {
  background-color: #fff;
  width: 100%;
  height: 60%;
}

.total-panel {
  width: 100%;
  margin: 30rpx;
  margin-left: 60rpx;
}

.text {
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern" 1;
  font-kerning: normal;
  font-size: 34rpx;
}

.count-text {
  width: 80%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.count-text_hd {
  width: 350rpx;
  left: 5%;
}

.count-text_bd {
  width: 30%;
  text-align: right;
}

.weui-label_text {
  width: 250rpx;
  word-wrap: break-word;
  word-break: break-all;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  font-size: 28rpx;
}

.u101_img {
  position: absolute;
  width: 90%;
  height: 4rpx;
}

.root {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 40rpx;
}

.mcht_text {
  left: 0;
  text-align: left;
}

.mcht_num {
  text-align: right;
  height: 50rpx;
  font-size: 32rpx;
}
