.weui-panel {
  background-color: #fff;
  position: relative;
  overflow: hidden;
}
.mcht_panel {
 width:100%;
 height: 100%;
}

.mcht{
  width :100%;
  height:400rpx;
}


.img-btn {
  top: 60rpx;
  background-color: #fff;
  width: 260rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-width: 1px;
  border-style: solid;
  border-color: rgba(121, 121, 121, 1);
}

.mcht-text{
   width: 100%;
  height: 200rpx;
 display: flex;
  align-items: center;
   justify-content: center; 
  text-rendering: optimizeLegibility;
    font-feature-settings: "kern" 1;
    font-kerning: normal;
}

.u101{
  top: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}


.title {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.title-image {
  margin-left: 20rpx;
  width: 210rpx;
  height: 140rpx;
}

.title-item {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#center {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.center-mchts {
  
  position: absolute;
  left: 0px;
  top: 0px;
  width: 130px;
  height: 100px;
  background: inherit;
  box-sizing: border-box;
  border-width: 1px;
  border-style: solid;
  border-color: rgba(121, 121, 121, 1);
  border-radius: 9px;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  font-family: 'PingFang SC Regular', 'PingFang SC';
  font-weight: 400;
  font-style: normal;
}

.center-mchts-image {
  background-color: #fff;
  width:100%;
  height:60%;
}
.total-panel{
   width:80%;
   margin: 30rpx;
   margin-left: 60rpx;
}
.text{
text-rendering: optimizeLegibility;
font-feature-settings: "kern" 1;
font-kerning: normal;
font-size: 34rpx;
}

.count-text {
  width: 100%;
  height: 40rpx;
  /* display: flex;
  flex-direction: row;
  justify-content: space-around; */
  margin-top: 20rpx;
}

.mcht-solid {
  width: 80%;
 height:3%;
}
.u101_img{
  position: absolute;
width: 90%;
height: 4rpx;


}

.solid {
  width: 90%;
   display: flex;
  align-items: center;
   justify-content: center; 
  border-bottom: 1px solid #221b4e;
}

.root {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 40rpx;
}
