<!-- 地区 -->
<view class="page">
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <block wx:for="{{areaList}}" wx:key="{{index}}" wx:for-item="item" >
          <view class="weui-cell weui-cell_access" bindtap='bindArea' id="{{item.ctCode}}" data-text="{{item.ctName}}">
            <view class="weui-cell__bd__d" >{{item.ctName}}</view>
          </view>
      </block>
    </view>
  </view>
</view>