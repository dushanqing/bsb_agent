@import "../style/mcht.wxss";

page{
  width: 100%;
  height: 100%;
}
.weui-input {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 10rpx;
  background: #fff;
  border: 1rpx solid #e6e6ea;
  height: 20rpx;
  width: 100%;
  left: 20rpx;
  top: 20rpx;
}

.weui-cell__bd {
  flex-direction: column;
  flex-wrap: wrap;
}

.mcht-search {
  width: 100%;
  height: 216rpx;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  box-shadow: 0 4rpx 10rpx #eee;
  display: flex;
  justify-content: center;
}

.weui-cell_access {
  width: 100%;
}

#picFlag {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}



.weui-cell__hd #mchtName {
  font-size: 36rpx;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern";
  -moz-font-feature-settings: "kern";
  font-kerning: normal;
}

#mchtStat {
  font-size: 28rpx;
  color: #169bd5;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern" 1;
  font-kerning: normal;
}

#crtDateTime {
  font-size: 28rpx;
}

.search-btn {
  width:188rpx;
  margin-right: 4%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}

.weui-btn {
  margin: 1.17647059em 15px 0.2em;
  width: 100%;
  height: 80%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pic-flag {
  text-align: left;
  width: 80rpx;
  flex: 1;
}

.search-input {
  width: 90%;
}

#search-btn {
  font-size:30rpx;
  color: #f8f8f8;
  background-color: #f4761a;
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
}  

 .loading.complete:before{  
  display: none;  
}  
